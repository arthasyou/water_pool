	{lager, "3.8.0"},
	{cowboy, "2.7.0"},
	{erl_frame, {git, "https://github.com/arthasyou/erl-frame.git", {branch, main}}},
	{eredis, {git, "https://github.com/wooga/eredis.git", {tag, "v1.2.0"}}},
	gpb,
	jsx
]}.

{relx, [
	{release, {water, "0.1.0"}, [		
		sasl,
		lager,
		cowboy,
